{% extends "HackatonUserBundle::layout.html.twig" %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('fill_profile') %}
        <div class="alert alert-success"><strong>
                {{ flashMessage }}
            </strong></div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-lg-6">

                <form method="post" {{ form_enctype(form) }}>

                    {{ form_errors(form) }}

                    {{ form_label(form.fio) }}<br/>
                    {{ form_widget(form.fio) }}<br/>

                    {{ form_label(form.gender) }} <br/>
                    {{ form_widget(form.gender) }} <br/>

                    {{ form_label(form.file) }}<br/>
                    {{ form_widget(form.file) }}<br/>

                    {{ form_widget(form._token) }}<br/>

                    <input type="submit" value="Сохранить">

                </form>
            </div>
        </div>
    </div>
{% endblock %}
